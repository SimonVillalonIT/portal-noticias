---
const formatedDate = new (Date as any)().toLocaleDateString("es-AR", {
  weekday: "long", // Día de la semana (por ejemplo, "domingo")
  day: "numeric", // Día del mes (por ejemplo, "13")
  month: "long", // Mes en formato largo (por ejemplo, "abril")
  year: "numeric", // Año (por ejemplo, "2025")
});

const capitalized =
  formatedDate.charAt(0).toUpperCase() + formatedDate.slice(1);
---

<section class="py-2 border-b-3 border-base-200">
  <h4 class="text-center font-semibold underline">{capitalized}</h4>
</section>
